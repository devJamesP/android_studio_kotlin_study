<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutStargramUploadActivity">

    <EditText
        android:id="@+id/content_input"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="내용을 작성해주세요"/>

    <TextView
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:id="@+id/viewPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#f12948"
        android:text="사진 선택"/>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/upload_post"
        android:layout_below="@id/viewPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:background="#f12948"
        android:text="업로드"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/all_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전체"
            android:background="#2C78EA"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/my_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="본인"
            android:background="#E82B2B"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="업로드"
            android:background="#4EEA54"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/userinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="정보"
            android:background="#ED7A56"
            android:textSize="20dp"/>
    </LinearLayout>


</RelativeLayout>