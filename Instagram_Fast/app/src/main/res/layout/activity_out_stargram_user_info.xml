<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutStargramUserInfo"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infoData"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:background="#EFAAAA"/>

    <TextView
        android:id="@+id/logout"
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="로그아웃"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#D53EEF"
        android:textStyle="bold"
        android:layout_below="@id/infoData"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전체"
            android:background="#2C78EA"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/my_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="본인"
            android:background="#E82B2B"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="업로드"
            android:background="#4EEA54"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/userinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="정보"
            android:background="#ED7A56"
            android:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>